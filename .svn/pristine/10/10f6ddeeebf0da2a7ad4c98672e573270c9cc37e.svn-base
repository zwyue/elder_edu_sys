<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">-->
    <title>老年大学系统——班级管理</title>
    <link rel="stylesheet" href="plugins/layui-v2.4.3/layui/css/layui.css"/>
    <link rel="stylesheet" href="css/common_style.css" />
    <link rel="stylesheet" href="css/bjgl_xz_xg.css"/>
</head>
<body>

<!--班级管理新增内容-->
<div class="layui-body yhglContent">
    <section class="smallNav">
			<span class="layui-breadcrumb bjgl_nav">
				<a href="javascript:;"><cite>班级管理</cite></a><span lay-separator="">></span>
                <a href="javascript:;">修改</a>
            </span>
    </section>

    <!--编辑内容-->
    <div class="lsglContent">
        <section class="lsglBt">
            <div class="fl bjxz_bl">班级修改</div>
            <div class="fanHui">
                <a href="javascript:history.go(-1);">返回</a>
            </div>
        </section>
        <div class="layui-form">
          <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">班级名称：</label>
                <div class="layui-input-inline">
                    <input type="text" name="classname"  lay-verify="required" class="layui-input inputTop" />
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">班主任姓名：</label>
                <div class="layui-input-inline" style="width: 55%;">
                    <select name="teaname"  lay-verify="required" class="layui-form-select selectTop">
                        <option value="全部">全部</option>
                        <option value="0">北京</option>
                        <option value="1">上海</option>
                        <option value="2">广州</option>
                        <option value="3">深圳</option>
                        <option value="4">杭州</option>
                    </select>
                    <!--<input type="text" class="layui-input inputTop" />-->
                </div>
            </div>
          </div>
          <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">班级专业：</label>
                <div class="layui-input-inline" style="width: 27%;">
                    <select name="seaitem"  lay-verify="required" class="layui-form-select selectclass">
                        <option value="请选择类别">请选择类别</option>
                        <option value="0">北京</option>
                        <option value="1">上海</option>
                        <option value="2">广州</option>
                        <option value="3">深圳</option>
                        <option value="4">杭州</option>
                    </select>
                </div>
                <div class="layui-input-inline" style="width: 27%;">
                    <select name="seazy"  lay-verify="required" class="layui-form-select selectclass">
                        <option value="请选择类别">请选择专业</option>
                        <option value="0">北京</option>
                        <option value="1">上海</option>
                        <option value="2">广州</option>
                        <option value="3">深圳</option>
                        <option value="4">杭州</option>
                    </select>
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">班级计划人数：</label>
                <div class="layui-input-inline">
                    <input type="text" name="classrs" class="layui-input inputTop" />
                </div>
            </div>
          </div>
          <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">授课老师：</label>
                <div class="layui-input-inline">
                    <input type="tel" name="teask" lay-verify="required|phone" placeholder="弹窗选择" onclick="xzls()" autocomplete="off" class="layui-input inputTop"/>
                </div>
            </div>
          </div>
        </div>
    </div>
    <!--编辑内容end-->
    <!--弹出层内容-->
    <div id="popSearchRoleTest" style="display:none;">
        <div style="width: 80%;  margin:0 auto; padding-top:5%;">
            <div class="">
                <div class="layui-form-item">
                    <label class="layui-form-label">类别：</label>
                    <div class="layui-input-block">
                        <select name="seatype" lay-verify="required">
                            <option value="请选择">请选择</option>
                            <option value="0">北京</option>
                            <option value="1">上海</option>
                            <option value="2">广州</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">专业：</label>
                    <div class="layui-input-block">
                        <select name="city" lay-verify="required">
                            <option value="请选择，类别选择完，解禁">请选择，类别选择完，解禁</option>
                            <option value="0">北京</option>
                            <option value="3">深圳</option>
                            <option value="4">杭州</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">老师：</label>
                    <div class="layui-input-block">
                        <select name="city" lay-verify="required">
                            <option value="请选择，类别选择完，解禁">请选择，类别选择完，解禁</option>
                            <option value="0">北京</option>
                            <option value="3">深圳</option>
                            <option value="4">杭州</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="tc_btn" >
                        <button type="button" class="layui-layer-close layui-btn layui-btn-normal">关闭</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--弹出层内容end-->

    <a href="javascript:;" class="bcBtn">确认修改</a>

</div>
<!--班级管理内容end-->

<script src="plugins/jQuery/jquery-3.3.1.js"></script>
<script src="plugins/layui-v2.4.3/layui/layui.js"></script>
<script src="./js/bmgl_tc.js"></script>

<script>
    layui.use('form', function(){
        var form = layui.form;
        //监听提交
        form.on('submit(formDemo)', function(data){
            layer.msg(JSON.stringify(data.field));
            return false;
        });
    });

</script>

</body>
</html>
