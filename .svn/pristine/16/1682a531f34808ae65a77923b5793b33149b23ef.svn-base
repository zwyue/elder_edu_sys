/*按钮*/
.Btn{
	display: block;width: 180px; height: 50px; text-align: center;line-height: 50px;color: #FFFFFF;
    margin: 200px auto 20px auto;background: #3d9def;font-size: 1.3rem;letter-spacing: 0.1rem; border-radius: 10px;
}
.Btn:hover{
	color: #FFFFFF;
}
/*按钮 end*/
/*课时段管理新增页面内容*/
/*分页*/
.page {
    margin: 0.5rem 0 0.5rem 30%;
    width: 80%;height: 50px;
}
.page p{
	color: #999;float: left;line-height: 50px;margin-right: 1rem;
}
.layui-laypage .layui-laypage-curr .layui-laypage-em{
	background: #3d9def;
}
/*分页end*/

/*手动排课*/
.content{
	height:95%;  background-color:#ffffff; margin: 0 auto; border-radius:0.5rem;
}
.content-head{
	height:10%;  font-size: 1.2rem;
}
.content-head .title{
	border-left: 5px solid #3d9def; position: absolute; top: 67px; left:2%; padding-left:5px;
}
.content-head .fanHui{
	float: right; position: absolute; right: 2%; top: 67px; padding: 3px 18px; background: #3d9def; color: #FFFFFF; border-radius: 10px;
	font-size: 1rem; letter-spacing: 0.1rem; box-shadow: 3px 3px 5px #3d9def; margin-right: 1%;
}

.content label{
	font-size: 1.2rem; font-weight: 400;
}

.content .layui-btn{
	background-color:#3d9def ; padding: 0.1rem 1.5rem 0 1.5rem; border-radius: 0.5rem;
}
.content .btn_anniu{
	text-align: center; margin-left: 0!important;
}
.btn_anniu .layui-input-block{
	margin-left: 0!important; margin-top:25%;
}
.content .layui-btn-primary{
	color: #ffffff;
}
/*手动排课end*/

/*改课*/
.layui-form-select .layui-input{
	border-radius: 0.5rem;
}
.bjwtyjy_content{
	margin-top: 3%;
}

/*自动排课*/
.content_zdpk{
    width: 83%; margin-left:0; display: inline-block;
}
.right_content{
	display: inline-block; width: 16%; height:20rem; position:fixed; top:3rem; margin-left:0.8rem;
	background-color: #ffffff; border-radius: 0.5rem;
}
.right_content .right_icon{
	color:#3d9def ; text-align: center; margin-top:3rem;
}
.right_content .right_text{
	color:#3d9def; font-size: 14px; margin-top: 1rem; text-align: center;
}
.right_content .right_icon .iconfont{
	font-size:7rem;
}