.pkglContent{
	background: #f3f3f3; padding: 0.5rem 1rem;box-sizing: border-box;
	position: absolute; bottom: 0!important;
}
.smallNav{
	width: 100%;height: 40px;
}
.pkgl_nav{
	display: block; visibility:visible;padding-left:10px;box-sizing: border-box;width: 50%;height: 40px;line-height: 40px;
}
.pkgl_nav a{
	font-size: 1rem;
}
/*课时段管理内容*/
.ksdglContent{
	height:auto;padding:10px 10px 20px 10px;box-sizing: border-box;background: #FFFFFF;
}
.ksdglContent section{
	width: 100%;height: 40px;
}
.ksdgl_bt{
	 display:inline-block;width: 200px;height: 35px;border-left: 5px solid #3d9def;padding-left: 10px;
	  line-height:35px;font-size: 1.2rem;font-weight: 500;letter-spacing: 0.1rem;
}
.tj,.fanHui{
	padding:5px 15px;text-align: center; line-height:150%;background: #3d9def;box-shadow: 0px 5px 5px #b0cdfc;
	 border-radius: 20px; font-size: 1rem; float: right; position: relative;color: #FFFFFF;
}
.layui-table th{
	color: #000000;
}
.layui-table td, .layui-table th{
	text-align: center;
}
.bg{
	padding:3px 10px;line-height:150%;border: 1px solid #BFBFBF;border-radius: 10px;
	box-sizing: border-box;margin-right: 0.2rem;
}
.bgActive{
	background:#3d9def;color:#FFFFFF;border: none;
}
.bgActive:hover{
	color: #FFFFFF;
}
.showPage{
	color: #666666;
}
.showPage select{
	border: 1px solid #3d9def;
}
/*课时段管理内容 end*/
/*课时段管理新增页面内容*/
.content_ksdgl{
    height:90%;background-color:#f3f3f3; margin: 0 auto; border-radius:0.5rem;
}
.content_ksdgl .content_ksdgl_head{
   background-color:#3d9def ; height:3rem; border-radius: 0.5rem;
}
.content_ksdgl .content_ksdgl_head a{
   color: #ffffff; font-size: 18px; position: relative; top:0.6rem; left:0.7rem;
}
.content_ksdgl .content_ksdgl_head .icon{
   color: #ffffff; font-size: 18px; float: right; margin-right: 2rem;
}

.content_ksdgl_form{
	margin-top: 20px;height:90%;background: #FFFFFF;font-size: 1rem;padding: 20px;box-sizing: border-box;
}
.layui-form-label{
	width: 130px!important;
}
