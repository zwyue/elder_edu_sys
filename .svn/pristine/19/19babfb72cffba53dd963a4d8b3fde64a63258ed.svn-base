.all{
	width: 100%;height: 100%;padding-top:20px;box-sizing: border-box;
	background: url(../images/login_bg.jpg) no-repeat;background-size: cover;
}
/**/
.login{
	width: 45%;height: 500px;position: fixed;left: 25%;top: 22%;
}
.login_cont{
	width:100%;height:450px;
	
}
.login_cont h2{
	color: #FFFFFF;font-size: 1.5rem;letter-spacing: 0.2rem;
}
.loginContent{
	width: 100%;height: 450px;border-radius:20px;margin-top:20px;
	overflow: hidden;background: #FFFFFF;box-shadow:1px 2px 3px #CCCCCC ;
}
.loginContentLeft{
	width: 45%;height:450px;overflow: hidden;border-radius:20px;
	background: url(../images/login_fm.jpg) no-repeat;background-size: 100% 100%;
}
/*.loginContentLeft img{
	width:100%;display: block;
}*/
/*表单*/
.loginContentRight{
	width:55%;height: 100%;background:#FFFFFF;padding-top:20px;box-sizing: border-box;border-radius:20px;
}
.loginContentRight form{
	width:90%;height:auto;padding-bottom:1.5rem;margin:20px 5% 0 5%;box-sizing: border-box;
}
.loginContentRight form section{
	width:100%;height:70px;border:1px solid #CCCCCC;background: #FFFFFF;
	border-radius:30px;padding: 15px 0;box-sizing:border-box;
}
.loginContentRight form section label{
	display:inline-block;width:13%;height:40px;line-height: 40px;border-right: 1px solid #CCCCCC;text-align: center;
}
.loginContentRight form section label i{
	font-size: 1.8rem;color: #999;
}
.loginContentRight form section input{
	width: 80%;height: 40px;line-height: 40px;border: none;font-size: 1.3rem;
	background: none;
}
.loginContentRight .error{
	height:1rem;font-size:14px;/*color: red;*/padding: 0.3rem 4rem 0.3rem;
}
/**/
.hint {
	font-size: 12px;text-align: right;padding-right: 10px;margin-bottom: 15px;visibility: hidden;
}
.right {
	border-color: #1dc091
}

.hint_right {
	color: #1dc091
}
.right { border-color: #1dc091; }
.hint_right { color: #1dc091; }
.wrong { border-color: #ea5a70; }

.hint_wrong {
	color: #ea5a70
}
