<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">	
		<title>老年大学系统——档案管理</title>
		<link rel="stylesheet" href="plugins/layui-v2.4.3/layui/css/layui.css"/>
		<link rel="stylesheet" href="css/common_style.css" />
	<!--	<link rel="stylesheet" href="css/yhgl_xsgl.css" />-->
		<link rel="stylesheet" href="css/dagl_dsj.css"/>
	</head>
	<body>
		<!--用户管理内容-->
		<div class="layui-body daglContent">
			<span class="layui-breadcrumb dagl_nav">
			  <a href="javascript:;"><cite>档案管理</cite></a><span lay-separator="">＞</span>
			  <a href="dagl_dsj.html">大事记</a><span lay-separator="">＞</span>
			  <a href="javascript:;">新增</a>
			</span>			
			
			<!--内容-->
			<div class="dsjContent">
				<section class="dsjContentBt">
					<span class="dsjxz_bt fl">大事记新增</span>
					<span class="fanHui fr">
						<a href="javascript:history.go(-1);">返回</a>
					</span>	
				</section>
				<section>
					<form class="layui-form" action="">
					 <div class="layui-inline">
				       <label class="layui-form-label">名称：</label>
				       <div class="layui-input-inline">
						   <input type="text" name="title" id="name"  required  lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input inputContent">
				         <!--<input type="text" name="title" id="name" required  lay-verify="required" autocomplete="off" class="layui-input inputContent"/>-->
				       </div>
				     </div>
				     <div class="layui-inline">
				       <label class="layui-form-label">时间：</label>
				       <div class="layui-input-inline">
				         <input type="text" id="time" required  lay-verify="required" autocomplete="off"  class="layui-input inputContent" placeholder="发生时间"/>
				       </div>
				     </div>
				     <div class="textareaCont">
				    	 <label class="layui-form-label">内容：</label>
				    	 <textarea id="text_content" required  lay-verify="required" autocomplete="off"  class="layui-textarea"></textarea>
				     </div>
					 <div class="">
						<a href="javascript:;" onclick="btnXz()" lay-submit lay-filter="formDemo" class="layui-btn bcBtn">保存</a>
					 </div>
					</form>
				</section>
			</div>
			<!--内容-->
			
		</div>
		<!--用户管理内容 end-->

		<script src="plugins/jQuery/jquery-3.3.1.js"></script>
		<script src="plugins/layui-v2.4.3/layui/layui.js"></script>
		<script src="js/dagl_dsj.js"></script>
		<script>
            //Demo
            layui.use('form', function(){
                var form = layui.form;

                //监听提交
                form.on('submit(formDemo)', function(data){
                    layer.msg(JSON.stringify(data.field));
                    return false;
                });
            });
		</script>
		<script>
            //新增
            function btnXz() {
                // alert(1);
                var dsjName = document.getElementById("name").value;
                var dsjTime = document.getElementById("time").value;
                var dsjtext = document.getElementById("text_content").value;
                $.ajax({
                    type: 'post',
                    url: "http://192.168.0.166:8080/memorabilia/save",
                    async: false,
                    data: {
                        title: dsjName,
						crttime:dsjTime,
                        content:dsjtext
                    },
                    dataType: 'json',
                    xhrFields: {withCredentials: true},
                    success: function (data) {
                         window.location.href="http://192.168.0.162:8083/dagl_dsj.html";
                    },
                    error: function () {
                        layui.use('layer', function(){
                            var layer = layui.layer;
                            layer.msg('新增失败！');
                        });
                    }
                });
            }
		</script>
	</body>
</html>
