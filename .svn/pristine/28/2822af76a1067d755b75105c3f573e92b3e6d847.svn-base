							layui.use('layer', function(){ 
							var layer = layui.layer;
							layer.msg('报名失败：'+data.msg);
							});
						}										
					},
					error: function(){
						layui.use('layer', function(){
							var layer = layui.layer;
							layer.msg('请求失败');
						});
					}
				});
			}else{
                layui.use('layer', function (){
