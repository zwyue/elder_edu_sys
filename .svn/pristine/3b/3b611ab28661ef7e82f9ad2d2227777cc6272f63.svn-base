<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>老年大学系统——班主任管理</title>
    <link rel="stylesheet" href="plugins/layui-v2.4.3/layui/css/layui.css"/>
    <link rel="stylesheet" href="css/common_style.css" />
    <link rel="stylesheet" href="font/iconfont.css"/>
    <link rel="stylesheet" href="css/bzrgl.css" />
</head>
<body id="bzrgl">
    <!--班主任工作新增总结内容-->
    <div class="layui-body bzrglContent">
		<span class="layui-breadcrumb bzrgl_nav">
		  <a href="javascript:;"><cite>班主任管理</cite></a><span lay-separator="">></span>
          <a href="javascript:;"><cite>班主任工作总结</cite></a><span lay-separator="">></span>
          <a href="javascript:;"><cite>新增</cite></a>
		</span>
        <!--内容部分-->
        <div class="content">
            <div class="content-head">
                <a class="title" href="javascript:;" >班主任工作总结新增</a>
                <a href="javascript:history.go(-1);" class="fanHui">返回</a>
            </div>
            <div class="">
                <form class="layui-form" action="">
                    <div class="layui-form-item">
                        <label class="layui-form-label">名称：</label>
                        <div class="layui-input-block">
                            <input type="text" name="title" id="name" placeholder="请输入标题" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">内容：</label>
                        <div class="layui-input-block">
                            <textarea name="desc" id="content" placeholder="请输入内容" class="nr_textarea layui-textarea"></textarea>
                        </div>
                    </div>
                    <div class="layui-form-item btn_anniu">
                        <div class="layui-input-block">
                            <a class="layui-btn" onclick="btnXz()"  lay-filter="formDemo">保存</a>
                            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--内容部分end-->
    </div>
    <!--班主任工作新增总结内容end-->

    <script src="plugins/jQuery/jquery-3.3.1.js"></script>
    <script src="plugins/layui-v2.4.3/layui/layui.js"></script>
    <script>
        //新增
        function btnXz() {
            var Name = document.getElementById("name").value;
            var Contant = document.getElementById("content").value;
            if (Name === '' || Contant === '') {
                layui.use('layer', function () {
                    var layer = layui.layer;
                    layer.msg('文本框不能为空！',
                        {time:1000,area:["180px","50px"]}
                        );
                })
            }
            else {
                $.ajax({
                    type: 'post',
                    url: "http://192.168.0.166:8080/worksummary/save",
                    async: false,
                    data: {
                        title: Name,
                        content: Contant,
                    },
                    dataType: 'json',
                    xhrFields: {withCredentials: true},
                    success: function (data) {
                        layui.use('layer', function(){
                            var layer = layui.layer;
                            layer.msg('新增成功',{area:["150px","50px"]});
                        });
                        setTimeout(function () {
                            window.location.href = "bzrgl_bzrgzzj.html";
                        },2000)
                    },
                    error: function () {
                        layui.use('layer', function () {
                            var layer = layui.layer;
                            layer.msg('新增失败！');
                        });
                    }
                });
            }
        }
    </script>

</body>
</html>