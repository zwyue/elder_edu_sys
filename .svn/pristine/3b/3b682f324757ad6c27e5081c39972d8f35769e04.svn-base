/*用户管理内容*/
.yhglContent{
	background: #f3f3f3;padding: 0.5rem 1rem;box-sizing: border-box;
	position: absolute; bottom: 0!important;
}
.smallNav{
	width: 100%;height: 40px;
}
.yhgl_nav{
	display:block;visibility:visible;padding-left:10px;box-sizing: border-box;
	width: 50%;height: 40px;line-height: 40px;float: left;position: relative;
}
.yhgl_nav a{
	font-size: 1rem;
}
.fanHui{
	display: block;float: left;
}
.fanHui a{
	padding: 3px 18px;background: #3d9def;color: #FFFFFF;border-radius: 10px;font-size: 1rem;
	letter-spacing: 0.1rem;	position: absolute;right:20px;margin-top:4px;
}
.fanHui a:hover{
	color: #FFFFFF;
}

/*表格*/
.lsglContent{
	height:auto;padding:10px 0px 20px 10px;box-sizing: border-box;background: #FFFFFF;margin-bottom:1rem;
	/*overflow: hidden;*/
}
.lsglContent .lsglBt{
	width: 100%;height: 45px;border-bottom:1px solid #b5b5b5;margin-bottom:1.5rem;
}
.lsglBt span{
	 display:block;width: 150px;height: 35px;border-left: 5px solid #3d9def;padding-left: 10px;
	 line-height:35px;font-size: 1.2rem;font-weight: 500;letter-spacing: 0.1rem;
}
/*表单内容*/
.lsglContent{
	width: 100%;height:auto;padding-bottom:10px;background: #FFFFFF;
}
.layui-inline{
	margin-right: 50px!important;
}
.layui-inline label,.layui-form-item label{
	font-size: 1rem;color: #666666;width: 120px!important;
}
.inputTop{
	width: 120%!important; border-radius:10px;border: 1px solid #B5B5B5;box-sizing: border-box;
}
/*负责班级*/
.bjlbContent{
	width: 100%;height:210px;padding:10px 0 20px 0;box-sizing: border-box;
}
.layui-select-title input{
	width: 28%;
}
.layui-form-select .layui-edge{
	left:28%;
}
.layui-form-select dl{
	min-width: 28%!important;
}
.bjlbContentSel{
	width:50%;height:70px;line-height: 70px;
}
.bjlbContentSel label{
	display: inline-block; width: 100px;height:auto;text-align: center;line-height: 40px;
	font-size:1.1rem;color: #666666;font-weight: 500;letter-spacing: 0.1rem;
}
.bjlbContentSel select{
	width: 300px;height: 40px;border-radius:10px;border: 1px solid #b5b5b5;
}
.bjlbContentSel select option{
	text-align: center;
}
/*表格 end*/

/*用户管理按钮*/
.lzBtn,.xgBtn,.bcBtn{
	display: block; width:180px;height:50px;text-align:center;line-height:50px;color:#FFFFFF;
	margin: 0 auto;background: #3d9def;font-size: 1.3rem;letter-spacing: 0.1rem;border-radius: 10px;
}
.lzBtn:hover,.xgBtn:hover,.bcBtn:hover{
	color: #FFFFFF;
}
/*用户管理按钮end*/

