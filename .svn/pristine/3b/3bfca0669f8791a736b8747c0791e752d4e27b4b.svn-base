package com.zrtjoa.controller.archive;

import com.zrtjoa.entity.Activities;
import com.zrtjoa.entity.Award;
import com.zrtjoa.service.ActivitiesService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import java.util.List;

/**
 * @Author: yangli
 * @Description:
 * @Date: Created in 17:43 2018/11/29
 * @Modified by:
 */
@Controller
@RequestMapping("/activities")
public class ActivitiesController {

    @Autowired
    private ActivitiesService activitiesService;

    /**
     * @Author: yangli
     * @params:
     * @Date: 2018/11/29
     * @Description: 校园活动列表
     */
    @RequestMapping(value = "list" ,method = RequestMethod.GET)
    public String getList(Model model){
        List<Activities> list = activitiesService.getList();
        model.addAttribute("list",list);
        return "archives/activities/activities_list";
    }

    /**
     * @Author: yangli
     * @params:
     * @Date: 2018/11/29
     * @Description: 校园活动新增页面
     */
    @RequestMapping(value = "add" ,method = RequestMethod.GET)
    public String add(){
        return "archives/activities/activities_add";
    }

    /**
     * @Author: yangli
     * @params:
     * @Date: 2018/11/29
     * @Description: 校园活动新增保存
     */
    @RequestMapping(value = "save" ,method = RequestMethod.POST)
    @ResponseBody
    public String save(Activities activities){
        activities.setUserid(1);
        activities.setUsername("username");
        activitiesService.insert(activities);
        return "{ \"msg\":\"success\"}";
    }

    /**
     * @Author: yangli
     * @params:
     * @Date: 2018/11/29
     * @Description: 校园活动详情
     */
    @RequestMapping(value = "query" ,method = RequestMethod.GET)
    public String query(Integer id,Model model){
        Activities activities = activitiesService.selectByPrimaryKey(id);
        model.addAttribute("activities",activities);
        return "archives/activities/activities_update";
    }

    /**
     * @Author: yangli
     * @params:
     * @Date: 2018/11/29
     * @Description: 校园活动修改保存
     */
    @RequestMapping(value = "update" ,method = RequestMethod.POST)
    @ResponseBody
    public String update(Activities activities){
        activities.setUserid(1);
        activities.setUsername("username");
        activitiesService.updateByPrimaryKey(activities);
        return "{ \"msg\":\"success\"}";
    }

    /**
     * @Author: yangli
     * @params:
     * @Date: 2018/11/29
     * @Description: 校园活动删除
     */
    @RequestMapping(value = "delete" ,method = RequestMethod.GET)
    public String delete(Integer id){
        activitiesService.deleteByPrimaryKey(id);
        return "redirect:/activities/list";
    }
}
