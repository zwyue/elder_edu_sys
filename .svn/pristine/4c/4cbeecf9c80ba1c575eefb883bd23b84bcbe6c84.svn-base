html,body{height: 100%;}
*{margin: 0;padding: 0;}
ul,ol{list-style: none;}
a{text-decoration: none;}
.fl{float: left;}
.fr{float: right;}
.layui-layout-admin .layui-body{bottom: 0!important;}

.layui-tab{margin: 0!important;}
.layui-tab-content{padding: 0!important;}
iframe{border: none!important;}
/*左侧导航部分*/
.layui-bg-black{
	background-image: linear-gradient(#3a78a4,#0e263d)!important;
}
.layui-nav{
	background:none!important;
}
.layui-side-scroll{
	height: auto!important;padding-bottom:30px;
}
.layui-side::-webkit-scrollbar {display:none}

  .nav_logo{
     margin-top: 5%;
     text-align: center;
     padding-bottom: 2rem;
  }
  .nav_li .nav_li_a{
    color: #ffffff!important;
  }
  .nav_li .nav_li_a:hover{
      background-color: rgba(255,255,255,0)!important;
  }

  .nav_li a ,.nav_li a i{
  	font-size: 1.15rem;
  }
  .nav_li a img{
     width: 25px;
     height: 25px;
  }
  .nav_li a img{
     width: 25px;
     height: 25px;
  }
  .nav_erli{
  	display: none;
  }
  .nav_li .nav_erli a{
      font-size: 16px;
      padding-left:23%;
      background-color: #356f99;
      color: #ffffff;
  }
  .nav_li .nav_erli dd:hover{
      background-color:#356f99!important;
  }
  .nav_li .nav_erli a:hover{
      background-color:#356f99!important;
      color:#59cae8 ;
  }
  /*左侧导航部分 end*/
