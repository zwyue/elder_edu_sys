<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>老年大学系统——排课管理</title>
    <link rel="stylesheet" href="plugins/layui-v2.4.3/layui/css/layui.css"/>
    <link rel="stylesheet" href="css/common_style.css" />
    <link rel="stylesheet" href="font/iconfont.css"/>
    <link rel="stylesheet" href="css/pkgl.css"/>
</head>
<body id="bzrgl">
  <!--排课管理-手动排课--->
  <div class="layui-body pkglContent">
		<span class="layui-breadcrumb pkgl_nav">
		  <a href="pkgl_ksdgl.html"><cite>排课管理</cite></a><span lay-separator="">></span>
          <a href="pkgl_ksdgl.html"><cite>手动排课</cite></a><span lay-separator="">></span>
          <a href="javascript:;"><cite>改课</cite></a>
		</span>
    <!--内容部分-->
	   <div class="content">
		  <div class="content-head">
			  <a class="title" href="javascript:;" >改课</a>
			  <a href="javascript:history.go(-1);" class="fanHui">返回</a>
		  </div>
		  <div class="bjwtyjy_content">
			  <form class="layui-form" action="">
				  <div class="layui-form-item">
					  <div class="layui-inline">
						  <label class="layui-form-label">排课时间：</label>
						  <div class="layui-input-inline">
							  <select name="" lay-verify="required">
								  <option value="周一">周一</option>
							  </select>
						  </div>
					  </div>
					  <div class="layui-inline">
						  <div class="layui-input-inline">
							  <select name="" lay-verify="required">
								  <option value="所有">所有</option>
							  </select>
						  </div>
					  </div>
				  </div>
				  <div class="layui-form-item">
					  <div class="layui-inline">
						  <label class="layui-form-label">排课教室：</label>
						  <div class="layui-input-inline">
							  <select name="" lay-verify="required">
								  <option value="请选择类别">请选择类别</option>
							  </select>
						  </div>
					  </div>
					  <div class="layui-inline">
						  <div class="layui-input-inline">
							  <select name="" lay-verify="required">
								  <option value="请选择教室">请选择教室</option>
							  </select>
						  </div>
					  </div>
				  </div>

				  <div class="layui-form-item btn_anniu">
					  <div class="layui-input-block">
						  <button class="layui-btn" lay-submit lay-filter="formDemo">确认修改</button>
						  <button type="reset" class="layui-btn layui-btn-primary">删除</button>
					  </div>
				  </div>
			  </form>
		  </div>
	  </div>
    <!--内容部分end-->
  </div>
  <!--排课管理-手动排课end-->

  <script src="plugins/jQuery/jquery-3.3.1.js"></script>
  <script src="plugins/layui-v2.4.3/layui/layui.js"></script>
  <script>
      //Demo
      layui.use('form', function(){
          var form = layui.form;

          //监听提交
          form.on('submit(formDemo)', function(data){
              layer.msg(JSON.stringify(data.field));
              return false;
          });
      });
  </script>

</body>
</html>