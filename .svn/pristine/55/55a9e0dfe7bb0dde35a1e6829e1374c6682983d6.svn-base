<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">	
		<title>老年大学系统——档案管理</title>
		<link rel="stylesheet" href="plugins/layui-v2.4.3/layui/css/layui.css"/>
		<link rel="stylesheet" href="css/common_style.css" />
	<!--	<link rel="stylesheet" href="css/yhgl_xsgl.css" />-->
		<link rel="stylesheet" href="css/dagl_dsj.css"/>
	</head>
	<body>
		<!--用户管理内容-->
		<div class="layui-body daglContent">
			<span class="layui-breadcrumb dagl_nav">
			  <a href="javascript:;"><cite>档案管理</cite></a><span lay-separator="">＞</span>
			  <a href="dagl_zyjs.html">资源建设</a><span lay-separator="">＞</span>
			  <a href="javascript:;">新增</a>
			</span>			
			
			<!--内容-->
			<div class="dsjContent">
				<section class="dsjContentBt">
					<span class="dsjxz_bt fl">资源建设新增</span>
					<span class="fanHui fr">
						<a href="javascript:history.go(-1);">返回</a>
					</span>	
				</section>
				<section>
					<form class="layui-form">
						<div class="layui-inline">
							<label class="layui-form-label">名称：</label>
							<div class="layui-input-inline">
								<input type="text" id="name" name="name" class="layui-input inputContent"/>
							</div>
						</div>
						<div class="layui-inline">
							<label class="layui-form-label">类别：</label>
							<div class="layui-input-inline">
								<select name="interest" id="type" lay-filter="aihao">
									<option value="请选择">请选择</option>
									<option value="0">数字化建设</option>
									<option value="1">教材建设</option>
								</select>
							</div>
						</div>
						<div class="layui-inline">
							<label class="layui-form-label">时间：</label>
							<div class="layui-input-inline">
								<input type="text" id="time" name="times" class="layui-input inputContent"
									   placeholder="发生时间" onblur="checkDate()"/>
							</div>
						</div>
						<div class="textareaCont">
							<label class="layui-form-label">内容：</label>
							<textarea id="textarea" name="content" class="layui-textarea"></textarea>
						</div>
					</form>
				</section>

				<a href="javascript:;" class="bcBtn" onclick="newIncreased()">保存</a>
			</div>
			<!--内容-->
			
		</div>
		<!--用户管理内容 end-->

		<script src="plugins/jQuery/jquery-3.3.1.js"></script>
		<script src="plugins/layui-v2.4.3/layui/layui.js"></script>
		<script>
            layui.use('form', function(){
                var form = layui.form;
            });
            //创建时间文本框验证
            var DATE_FORMAT = /^[0-9]{4}-[0-1]?[0-9]{1}-[0-3]?[0-9]{1}$/;
            function checkDate(){
                var getctime = document.getElementById("time").value;
                if(DATE_FORMAT.test(getctime)){
                    layui.use('layer', function(){
                        var layer = layui.layer;
                        layer.msg('您输入的日期格式正确！',{time:1000});
                    });
                }
                else {
                    layui.use('layer', function(){
                        var layer = layui.layer;
                        layer.msg('抱歉，您输入的日期格式有误，正确格式应为:<br>2012-01-01',{time:2000});
                    });
                }
            }
            //新增
            function newIncreased() {
                var xzName = document.getElementById("name").value;
                var xzType = document.getElementById("type").value;
                var xzTime = document.getElementById("time").value;
                var xzTextarea = document.getElementById("textarea").value;
                if (xzName === '' || xzTime === '' || xzTextarea === '') {
                    layui.use('layer', function () {
                        var layer = layui.layer;
                        layer.msg('文本框不能为空！',{time:1000});
                    })
                }
                else {
                    $.ajax({
                        type: 'POST',
                        async:false,
                        url:'api/resource/saveResource',
                        data:{
                            title:xzName,
                            category:xzType,
                            times:xzTime,
                            content:xzTextarea
                        },
                        dataType: 'json',
                        xhrFields: {withCredentials: true},
                        success:function (data) {
                            layui.use('layer', function(){
                                var layer = layui.layer;
                                layer.msg('新增成功！');
                            });
                            setTimeout(function () {
                                window.location.href = "dagl_zyjs.html";
                            },2000)
                        },
                        error:function () {
                            layui.use('layer', function(){
                                var layer = layui.layer;
                                layer.msg('新增失败！');
                            });
                        }
                    })
                }
            }
		</script>
	</body>
</html>
