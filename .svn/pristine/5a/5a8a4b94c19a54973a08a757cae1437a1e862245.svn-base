.jsxgContent{
	height: auto;margin-bottom: 20px;
}
.jsxgContent .jsxgCol{
	 width:100%;height:60px;margin-bottom: 15px;background: #FFFFFF;padding: 10px;box-sizing: border-box;
}
.jsxg_bt{
	display:block;width: 150px;height: 40px;border-left: 5px solid #fe9226;padding-left: 10px;
	line-height:40px;font-size: 1.2rem;font-weight: 500;letter-spacing: 0.1rem;float: left;
}

.fanHui{
	display: block;float: left;
}
.fanHui a{
	padding:6px 20px;background: #fe9226;color: #FFFFFF;border-radius: 10px;
	font-size: 1rem;letter-spacing: 0.1rem;position: absolute;right:50px;margin-top: 4px;
}

/*角色修改*/
.jsxgTree{
	width: 100%;height: auto;background: #FFFFFF;padding-bottom: 20px;
}
.jsCheck{
	height:auto;padding: 20px 15px 5px 0px;box-sizing: border-box;background: #FFFFFF;margin: 1rem 0;font-size: 1rem;
}
/*权限管理*/
.qxgl{
	width: 100%;height:auto;padding: 20px;box-sizing: border-box;
}
.qxglBt{	
	display: inline-block;width:100px;height:auto;text-align: center;font-size: 1.1rem;float: left;
}
.qxglTree{
	display: inline-block; 
	padding-top: 10px;width: 200px;height: auto;padding-bottom:20px;border: 1px solid #CCCCCC;
}
.qxxgBtn{
	display: block; width:180px;height:50px;text-align:center;line-height:50px;color:#FFFFFF;
	margin: 0 auto;background: #fe9226;font-size: 1.3rem;letter-spacing: 0.1rem;border-radius: 10px;
}
.qxxgBtn:hover{
	color: #FFFFFF;
}
