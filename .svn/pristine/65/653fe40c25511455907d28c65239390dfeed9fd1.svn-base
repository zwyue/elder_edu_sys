/*弹窗*/
html,body{height: 100%;}
#bgDiv{
	position: fixed;left: 0px;top: 0px;background-color: black;width: 100%;height: 100%;opacity: 0.2;
	z-index: 999;display: none;
}
.layui-form-label{width: 100px!important;}
#jsFgDiv,#jsFgDivLook{
    position: fixed; width: 400px;height: 300px;left: 35%;top: 25%;z-index: 9999;padding-top: 20px;box-sizing: border-box;
    border: 1px solid palegoldenrod;background-color:#FFFFFF;display: none;box-shadow: 2px 2px 2px #CCCCCC;
}
#jsFgDiv section,#jsFgDivLook section{
	width: 100%;height:40px; padding:0 10px;box-sizing: border-box;margin-bottom: 10px;
}
#jsFgDiv section label,#jsFgDivLook section label{
	float: left; display: block;padding: 9px 15px;
    font-weight: 400;line-height: 20px;text-align: right;float: left;
}
#jsFgDiv section input,#jsFgDivLook section input{
	display: block;width:70%;padding-left: 10px;height: 38px;border: 1px solid #CCCCCC;
	background-color:#fff;border-radius: 2px;float: left;
}
#jsFgDiv button{
	margin-left:120px;
}
#jsFgDivLook button{
	margin-left:45% ;
}
/*弹窗end*/
/*用户管理内容*/
.yhglContent{
	background: #f3f3f3;padding: 0.5rem 1rem;box-sizing: border-box;
	position: absolute; bottom: 0!important;
}
.smallNav{
	width: 100%;height: 40px;
}
.yhgl_nav{
	display: block; visibility:visible;padding-left:10px;box-sizing: border-box;width: 50%;height: 40px;line-height: 40px;
}
.yhgl_nav a{
	font-size: 1rem;
}

/*表格*/
.jsBiaoGe{
	height:auto;padding:10px 10px 20px 10px;box-sizing: border-box;background: #FFFFFF;
}
.jsBiaoGe section{
	width: 100%;height: 40px;
}
.jslb_bt{
	display:block;width: 150px;height: 35px;border-left: 5px solid #3d9def;padding-left: 10px;
	line-height:35px;font-size: 1.2rem;font-weight: 500;letter-spacing: 0.1rem;
}
.tjjs{
	padding:5px 8px; border:1px solid #3d9def; text-align: center; line-height:150%;background:#3d9def ;
	color: #FFFFFF; border-radius: 10px; font-size: 1rem; float: right; position:relative; top: -2rem;
}
.tjjs:hover{
	color: #FFFFFF;
}
.layui-table td, .layui-table th{
	text-align: center;
}
table tbody{
	border-left:1px solid #b5b5b5;border-right:1px solid #b5b5b5;border-bottom:1px solid #b5b5b5;
}
table thead tr{border-radius:20px;}
.bg{
	padding:3px 10px;line-height:150%;border: 1px solid #BFBFBF;
	box-sizing: border-box;margin-right: 0.5rem;
}
.bgActive{
	background:#3d9def;color:#FFFFFF;border: none;
}
.bgActive:hover{
	color: #FFFFFF;
}
.showPage{
	color: #666666;
}
.showPage select{
	border: 1px solid #3d9def;
}
/*表格end*/
/*分页*/
.page {
    margin: 0.5rem 0 0.5rem 30%;
    width: 80%;height: 50px;
}
.page p{
	color: #999;float: left;line-height: 50px;margin-right: 1rem;
}
.layui-laypage .layui-laypage-curr .layui-laypage-em{
	background: #3d9def;
}
 /*背景*/
  .search_bg{
      text-align: center;padding:8% 0;box-sizing: border-box;
  }
  .search_bg h2{
      color: #666666;
  }