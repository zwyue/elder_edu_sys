                        $("tbody").html(chaXunHtml);
                    },
                    error: function(){
                        layui.use('layer', function(){
                            var layer = layui.layer;
                            layer.msg('查询失败！');
                        });
                    }
                });
         	 }else{
         	 	layui.use('layer', function(){
                    var layer = layui.layer;
                    layer.msg('请输入姓名或身份证号！');
               });        	 	
         	 }
                
         })

