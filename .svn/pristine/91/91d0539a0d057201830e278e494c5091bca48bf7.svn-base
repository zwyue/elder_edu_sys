<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>老年大学系统——班主任管理</title>
    <link rel="stylesheet" href="plugins/layui-v2.4.3/layui/css/layui.css"/>
    <link rel="stylesheet" href="css/common_style.css" />
    <link rel="stylesheet" href="font/iconfont.css"/>
    <link rel="stylesheet" href="css/bzrgl.css" />
</head>
<body id="bzrgl">
    <!--获奖记录-查看信息-->
    <div class="layui-body bzrglContent">
		<span class="layui-breadcrumb bzrgl_nav">
		  <a href="javascript:;"><cite>班主任管理</cite></a><span lay-separator="">></span>
          <a href="javascript:;"><cite>获奖记录</cite></a><span lay-separator="">></span>
          <a href="javascript:;"><cite>查看信息</cite></a>
		</span>
        <!--内容部分-->
        <div class="content_ck">
            <div class="content-ck-head">
                <a class="title" href="javascript:;">查看详情</a>
                <a class="icon" href="javascript:history.go(-1);"><i style="font-size: 28px;"
                                                                     class="layui-icon layui-icon-close-fill"></i> </a>
            </div>
            <div class="layui-text">
                <p>基本信息</p>
            </div>
            <div class="content_table">
                <form class="layui-form" action="">
                    <table class="layui-table table_width">
                        <colgroup data-filtered="filtered">
                            <col width="200" data-filtered="filtered">
                            <col data-filtered="filtered">
                        </colgroup>
                        <tbody>
                        <tr>
                            <td>名称</td>
                            <td id="name"></td>
                        </tr>
                        <tr>
                            <td>内容</td>
                            <td id="content"></td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="layui-form-item btn_anniu" style="position:relative; top:-2rem;">
                        <div class="layui-input-block">
                            <a href="javascript:history.go(-1);" class="fanHui layui-btn">关闭</a>
                            <!--<button type="reset" class="layui-btn layui-btn-primary">重置</button>-->
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--内容部分end-->
    </div>
    <!--获奖记录-查看信息end-->

    <script src="plugins/jQuery/jquery-3.3.1.js"></script>
    <script src="plugins/layui-v2.4.3/layui/layui.js"></script>
    <script>
        //获取浏览地址id
        (function ($) {
            $.getUrlParam = function (name) {
                var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
                var r = window.location.search.substr(1).match(reg);
                if (r != null) return unescape(r[2]);
                return null;
            }
        })(jQuery);
        var id = $.getUrlParam('id');
        // 查询到id，并把表格页面的值带到修改页面
        $(function () {
            $.ajax({
                type: 'GET',
                url: "api/awardrecord/query",
                async: false,
                data: {
                    id: id
                },
                dataType: 'json',
                xhrFields: {withCredentials: true},
                success: function (data) {
                    $("#name").text(data.data.title);
                    $("#content").text(data.data.content);
                },
                error: function () {
                    layui.use('layer', function () {
                        var layer = layui.layer;
                        layer.msg('未查到数据');
                    });
                }
            });
        });
    </script>

</body>
</html>