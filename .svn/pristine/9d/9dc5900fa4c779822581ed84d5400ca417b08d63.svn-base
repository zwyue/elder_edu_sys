/*备注：格式保持同一，标注统一所有样式*/

/*删除按钮*/
.detBtn{
	background-color: #ff3a3a;
	color: #fff;
	padding: 3px 10px;
    line-height: 150%;
    border: 1px solid #BFBFBF;
    border-radius: 10px;
    box-sizing: border-box;
    margin-right: 0.2rem;
    border: none;
    margin-left: 5px;
    margin-right: 5px;
}

/*查看按钮*/
.viewBtn{
	background-color: #8a8b8a;
	color: #fff;
	padding: 3px 10px;
    line-height: 150%;
    border: 1px solid #BFBFBF;
    border-radius: 10px;
    box-sizing: border-box;
    margin-right: 0.2rem;
    border: none;
    margin-left: 5px;
    margin-right: 5px;
}

/*修改按钮*/
.chaBtn{
	background-color: #058b3b;
	color: #fff;
	padding: 3px 10px;
    line-height: 150%;
    border: 1px solid #BFBFBF;
    border-radius: 10px;
    box-sizing: border-box;
    margin-right: 0.2rem;
    border: none;
    margin-left: 5px;
    margin-right: 5px;
}

/*返回按钮*/
.backBtn{
    height: 30px !important;
    line-height: 30px !important;
    padding: 3px 18px !important;
    background: #3d9def !important;
    color: #FFFFFF !important;
    border-radius: 10px !important;
    font-size: 1rem !important;
    letter-spacing: 0.1rem !important;
    position: absolute !important;
    right: 35px !important;
    box-shadow: 0px 2px 10px #b0cdfc !important;
}
.backBtn:hover{
    color: #fff;
}

/*查询按钮*/
.searchBtn{
    position: absolute;
    right: 3%;
    width: 90px;
    height: 40px;
    background: #3d9def;
    color: #FFFFFF;
    text-align: center;
    line-height: 40px;
    font-size: 1.1rem;
    border-radius: 10px;
    letter-spacing: 0.2rem;
    box-shadow: 0px 2px 10px #b0cdfc;
}

/*新增按钮*/
.addBtn{
    background-color: #3d9def;
    padding: 0.4rem 0.6rem 0.4rem 0.6rem;
    text-align: center;
    line-height: 150%;
    color: #FFFFFF!important;
    border-radius: 10px;
    font-size: 1rem;
    float: right;
    position: relative;
    top: -2rem;
    width: 90px;
    box-shadow: 0px 2px 10px #b0cdfc;
}

/*保存按钮*/
.saveBtn{
    display: block !important;
    width: 90px !important;
    height: 40px !important;
    text-align: center !important;
    line-height: 40px !important;
    color: #FFFFFF !important;
    margin: 0 auto !important;
    background: #3d9def !important;
    font-size: 16px !important;
    letter-spacing: 0.1rem !important;
    border-radius: 10px !important;
    box-shadow: 0px 2px 10px #b0cdfc !important;
}