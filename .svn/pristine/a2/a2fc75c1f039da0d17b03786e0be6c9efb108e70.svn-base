<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>老年大学系统——修改密码</title>
    <link rel="stylesheet" href="plugins/layui-v2.4.3/layui/css/layui.css"/>


</head>
<body>
    <!--修改弹出层内容-->
        <div style="width: 80%;margin:0 auto;padding-top: 15%;">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <label class="layui-form-label">新密码：</label>
                    <div class="layui-input-block">
                        <input type="password" id="xPass" class="layui-input" placeholder="请设置登录密码">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">确认密码：</label>
                    <div class="layui-input-block">
                        <input type="password" id="qrPass" placeholder="请再次填写密码" class="layui-input" onkeyup="validate()"><span id="tishi"></span>
                    </div>
                </div>
            </form>
        </div>
    <!--修改弹出层内容end-->
    
    <script src="plugins/jQuery/jquery-3.3.1.js"></script>
    <script src="plugins/layui-v2.4.3/layui/layui.js"></script>
    <script>
        //修改成功时需再次向父页面传参
        var callbackdata = function () {
            var passwordVal=$("#xPass").val();
            var data = {
                password: passwordVal,
            };
            return data;
        }
       // 确认密码
        function validate() {

            var pwd = $("#xPass").val();
            var pwd1 = $("#qrPass").val();
            <!-- 对比两次输入的密码 -->
            if(pwd == pwd1)
            {
                $("#tishi").html("两次密码相同");
                $("#tishi").css("color","green");
                //$("#xiugai").removeAttr("disabled");
            }
            else {
                $("#tishi").html("两次密码不相同");
                $("#tishi").css("color","red")
                $("button").attr("disabled","disabled");
            }
        }
    </script>

</body>
</html>