/*头部*/
  .header{
      position: absolute;left: 200px;right:20px;height:60px;background-color: #FFFFFF;
  }
  .header-right{
      float: right;
      padding:1rem 1rem 0 1rem;

  }
/*头部end*/

/*用户管理内容*/
.yhglContent{
	background: #f3f3f3;top: 60px;padding: 0.5rem 1rem;box-sizing: border-box;
}
.yhgl_nav{
	visibility:visible;padding-left:10px;box-sizing: border-box;
}
.yhgl_nav a{
	font-size: 1rem;
}
/*查询*/
.chaXun{
	height:auto; padding:20px 15px 5px 15px;box-sizing: border-box;background: #FFFFFF;
	margin: 1rem 0;font-size: 1rem;
}
.chaXun input{
	border-radius: 10px;border:1px solid #bfbfbf;
}
#idCard{
	width: 150%;
}
.btn_chaXun{
	display:block;width: 100px;height:40px;background: #fe9226;color: #FFFFFF;
	text-align: center;line-height: 40px;font-size: 1.1rem;border-radius: 10px;letter-spacing: 0.2rem;
}
.btn_chaXun:hover{
	color:#FFFFFF;
}
/*查询 end*/

/*表格*/
.biaoGe{
	height:auto;padding:10px 10px 20px 10px;box-sizing: border-box;background: #FFFFFF;
}
.biaoGe section{
	width: 100%;height: 40px;
}
.xslb_bt{
	 display:block;width: 150px;height: 35px;border-left: 5px solid #fe9226;padding-left: 10px;
	 line-height:35px;font-size: 1.2rem;font-weight: 500;letter-spacing: 0.1rem;
}
.xzxs{
	display: block;padding:5px 8px;border:1px solid #fe9226;text-align: center;line-height:150%;
	color: #999999;border-radius: 10px;font-size: 1rem;
}
.layui-table td, .layui-table th{
	text-align: center;
}
.bg{
	padding:3px 10px;line-height:150%;border: 1px solid #BFBFBF;border-radius: 10px;box-sizing: border-box;
}
.bgActive{
	background:#fe9226;color:#FFFFFF;border: none;
}
.showPage{
	color: #666666;
}
.showPage select{
	border: 1px solid #fe9226;
}
/*表格 end*/
/*分页*/
.page {
    margin: 0.5rem 0 0.5rem 30%;
    width: 80%;height: 50px;
}
.page p{
	color: #999;float: left;line-height: 50px;margin-right: 1rem;
}
.layui-laypage .layui-laypage-curr .layui-laypage-em{
	background: #fe9226;
}
