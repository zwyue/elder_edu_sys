form .btn_login{
	display: block; width:100%;height:70px;background:#fe9226;text-align: center;line-height: 70px;
	color:#FFFFFF;font-size: 1.5rem; border-radius:20px;box-sizing:border-box;letter-spacing: 0.3rem;
}
/*表单 end*/
.login_bottom{
	width:100%;height:35px;background:#adadad;margin-top:1.5rem;line-height:35px;
}
.login_bottom a{
	display:inline-block;width:50%;color:#FFFFFF;text-align: center;float: left;font-size: 1rem;
}

