.all{
	width: 100%;height: 100%;position: relative;padding-top:5%;box-sizing: border-box;
	background: url(../images/login_bg.jpg) no-repeat;background-size: cover;
}
/**/
.login_cont{
	width: 50%;height:auto;margin:0 25%;box-sizing: border-box;
	
}
.login_cont h2{
	color: #FFFFFF;font-size: 1.5rem;letter-spacing: 0.2rem;
}
.loginContent{
	width: 100%;height: 450px;border-radius:20px;margin-top:20px;
	overflow: hidden;background: #FFFFFF;box-shadow:1px 2px 3px #CCCCCC ;
}
.loginContentLeft{
	width: 45%;height:450px;overflow: hidden;border-radius:20px;
	background: url(../images/login_fm.jpg) no-repeat;background-size: cover;
}
/*.loginContentLeft img{
	width:100%;display: block;
}*/
/*表单*/
.loginContentRight{
	width:55%;height: 100%;background:#FFFFFF;padding-top:20px;
	box-sizing: border-box;border-radius:20px;
}
.loginContentRight form{
	width:86%;height:auto;padding-bottom:1.5rem;margin:20px 7% 0 7%;
	box-sizing: border-box;
}
.loginContentRight form section{
	width:100%;height:70px;border:1px solid #CCCCCC;background: #FFFFFF;
	border-radius:30px;padding: 15px 0;box-sizing:border-box;margin-bottom: 1.5rem;
}
.loginContentRight form section label{
	display:inline-block;width:13%;height:40px;line-height: 40px;
	border-right: 1px solid #CCCCCC;text-align: center;
}
.loginContentRight form section label i{
	font-size: 1.8rem;color: #999;
}
.loginContentRight form section input{
	width: 80%;height: 40px;line-height: 40px;border: none;font-size: 1.3rem;
	background: none;
}
.radio{
	width:100%;height:25px;padding-left:10%;box-sizing: border-box;
	font-size:1.2rem;color: #999;margin-bottom: 1.5rem;
}
.radio div{
	width: 50%;height:25px;float: left;
}
input[type="radio"] {
    height: 18px;width: 18px;margin-right: 5px;
   /* display: none;*/
}
