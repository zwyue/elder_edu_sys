/*学期管理内容*/
   .xqglContent{
      background: #f3f3f3; padding: 0.5rem 1rem;box-sizing: border-box;
      position: absolute; bottom: 0!important;
   }
   .smallNav{
      width: 100%;height: 40px;
   }
   .xqgl_nav{
      display: block; visibility:visible;padding-left:10px;box-sizing: border-box;width: 50%;height: 40px;line-height: 40px;
   }
   .xqgl_nav a{
      font-size: 1rem;
   }
   /*表格*/
   .biaoGe{
      height:auto;padding:10px 10px 20px 10px;box-sizing: border-box;background: #FFFFFF;
   }
   .xqgl_xz{
      padding: 10px 10px 20px 10px; box-sizing: border-box;
      background: #FFFFFF; height: 90%;
   }
   .xqlb_bt{
      display:block; width: 150px;height: 35px;border-left: 5px solid #3d9def;padding-left: 10px;
      line-height:35px;font-size: 1.2rem;font-weight: 500;letter-spacing: 0.1rem;
   }
   .xzxq{
      padding:5px 8px; background-color:#3d9def; text-align: center; line-height:150%;
      color: #FFFFFF; border-radius: 10px; font-size: 1rem; float: right; position: relative; top: -2rem;
   }
   .xzxq:hover{
       color: #FFFFFF!important;
   }
   .layui-table td, .layui-table th{
      text-align: center;
   }
   .bg{
      padding:3px 10px;line-height:150%;border: 1px solid #BFBFBF;border-radius: 10px;
      box-sizing: border-box;margin-right: 0.2rem;
   }
   .bgActive{
      background:#3d9def;color:#FFFFFF;border: none;
   }
   .bgActive:hover{
      color: #FFFFFF;
   }
   .showPage{
      color: #666666;
   }
   .showPage select{
      border: 1px solid #3d9def;
   }
   /*表格 end*/
   /*分页*/
   .page {
      margin: 0.5rem 0 0.5rem 30%;
      width: 80%;height: 50px;
   }
   .page p{
      color: #999;float: left;line-height: 50px;margin-right: 1rem;
   }
   .layui-laypage .layui-laypage-curr .layui-laypage-em{
       background: #3d9def;
   }
   /*背景*/
   .search_bg{
      text-align: center;padding:8% 0;box-sizing: border-box;
   }
   .search_bg h2{
       color: #666666;
   }
/*学期管理内容end*/

/*学期管理 新增 内容*/
    /*返回 按钮*/
    .xqxz_cancel{
       padding:0.2rem 1.5rem; background-color:#3d9def; text-align: center; line-height:150%;
       color: #FFFFFF; border-radius: 10px; font-size: 1rem; float: right; position: relative; top: -2rem;
    }
    .xqxz_cancel:hover{
       color: #FFFFFF!important;
    }
    /*文本框 下拉框内容*/
    .layui-form-item{
       margin-top: 3rem;
    }
    .layui-form select{
       display: block!important;  float: left;
       width:20%; height:2.5rem; border-radius: 0.5rem; color: #999999;
    }
    .layui-form .endtime +.endtime{
       margin-left: 2rem;
    }
    .xqmc input{
       border-radius: 0.5rem; border: #999999 1px solid; width:140%;
    }

    /*保存 按钮*/
    .btn-ok {
       text-align: center; margin-left:0!important; margin-top: 18%;
    }
    .btn{
       padding:0.8rem 2rem 0.8rem 2rem; text-align: center; background-color:#3d9def ; color: #ffffff;
       border-radius: 0.5rem;
    }
    .btn:hover{
       color: #ffffff;
    }
/*学期管理 新增 内容end*/

